{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "outDir": "./build",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@generated/*": ["./src/models/generated/*"],
      "@db/*": ["./src/models/db/*"],
      "@reducer/*": ["./src/reducers/*.reducer.ts"],
      "@api/*": ["./src/api/*.api.ts"],
      "@dataloader/*": ["./src/dataloaders/*.dataloader.ts"],
      "@route/*": ["./src/routes/*.routes.ts"],
      "@middleware/*": ["./src/middlewares/*.middleware.ts"],
      "@service/*": ["./src/services/*.service.ts"],
      "@test/*": ["./test/*"]
    },
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es2018", "esnext.asynciterable"]
  },
  "exclude": [
    "node_modules",
    "src/modules/*.ignore"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ]
}