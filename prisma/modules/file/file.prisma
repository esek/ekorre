model PrismaFile {
	id String @id @default(cuid())
	name String
	type String
	folderLocation String @map("folder_location")

	accessType PrismaAccessResource @relation(fields: [refAccessResource], references: [slug])
	refAccessResource String @map("ref_access_resource")

	createdAt DateTime @default(now()) @map("created_at")

	uploader PrismaUser @relation(fields: [refUploader], references: [username])
	refUploader String @map("ref_uploader")

	@@map("files")
}

model PrismaAccessResource {
	slug String @id

	files PrismaFile[]

	@@map("access_resources")
}

model PrismaUser {
	username String @id

	files PrismaFile[]

	@@map("users")
}