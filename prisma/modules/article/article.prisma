model PrismaArticle {
	id Int @id @default(autoincrement())
	slug String @unique // a slug must be unique so it can be accessed like: /articles/my-slug

	title String
	body String
	signature String
	
	type PrismaArticleType @default(INFORMATION)

	createdAt DateTime @default(now()) @map("created_at")
	updatedAt DateTime @default(now()) @map("updated_at")

	author PrismaUser @relation(fields: [refAuthor], references: [username])
	refAuthor String 

	@@map("articles")
}

enum PrismaArticleType {
	NEWS
	INFORMATION

	@@map("article_types")
}


model PrismaUser {
	username String @id
	articles PrismaArticle[]

	@@map("users")
}