
model PrismaArticleTag {
	id Int @id @default(autoincrement())
	tag String @unique
	createdAt DateTime @default(now()) @map("created_at")

	article PrismaArticle @relation(fields: [refArticle], references: [id])
	refArticle Int @map("ref_article")

	@@map("article_tags")
}

model PrismaArticle {
	id Int @id @default(autoincrement())

	tags PrismaArticleTag[]

	@@map("articles")
}