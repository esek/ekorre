model PrismaHeHe {
  id Int @id @default(autoincrement())

  number Int
  year   Int

  uploadedAt DateTime @default(now()) @map("uploaded_at")

  uploader    PrismaUser @relation(fields: [refUploader], references: [username])
  refUploader String     @map("ref_uploader")

  file    File   @relation(fields: [refFile], references: [id])
  refFile String @unique @map("ref_file")


  @@unique([number, year])
  @@map("hehes")
}

model PrismaUser {
  username String @id

  heHes PrismaHeHe[]

  @@map("users")
}

model File {
  id String @id @default(cuid())

  heHe PrismaHeHe?

  @@map("files")
}
