model AccessMapping {
	id Int @id @default(autoincrement())
	
	type AccessMappingType
	name String
	page String? // if type = "page" we want to specify the base URL of the page

	resource AccessResource @relation(fields: [refResource], references: [slug])
	refResource String

	@@unique([type, name, page])
}

enum AccessMappingType {
	QUERY
	MUTATION
	PAGE
}

model AccessResource {
	slug String @id

	mappings AccessMapping[]
}