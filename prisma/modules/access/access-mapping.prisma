model PrismaAccessMapping {
	id Int @id @default(autoincrement())
	
	type PrismaAccessMappingType
	name String
	page String? // if type = "page" we want to specify the base URL of the page

	resource PrismaAccessResource @relation(fields: [refResource], references: [slug])
	refResource String @map("ref_resource")

	@@unique([type, name, page])
	@@map("access_mappings")
}

enum PrismaAccessMappingType {
	QUERY
	MUTATION
	PAGE

	@@map("access_mapping_types")
}

model PrismaAccessResource {
	slug String @id

	mappings PrismaAccessMapping[]
	@@map("access_resources")
}