model PrismaPostAccess {
	id Int @id @default(autoincrement())
	
	post PrismaPost @relation(fields: [refPost], references: [slug])
	refPost String @map("ref_post")

	resource PrismaAccessResource @relation(fields: [refResource], references: [slug])
	refResource String @map("ref_resource")

	@@map("post_accesses")
}

model PrismaPost {
	slug String @id

	access PrismaPostAccess[]
	
	@@map("posts")
}

model PrismaAccessResource {
	slug String @id

	postAccess PrismaPostAccess[]

	@@map("access_resources")
}