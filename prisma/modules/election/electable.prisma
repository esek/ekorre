model PrismaElectable {
	id Int @id @default(autoincrement())

	post PrismaPost @relation(fields: [refPost], references: [slug])
	refPost String @map("ref_post")

	election PrismaElection @relation(fields: [refElection], references: [id])
	refElection Int @map("ref_election")

	@@map("electables")
}

model PrismaPost {
	slug String @id

	electables PrismaElectable[]

	@@map("posts")
}

model PrismaElection {
	id Int @id @default(autoincrement())

	electables PrismaElectable[]

	@@map("elections")
}