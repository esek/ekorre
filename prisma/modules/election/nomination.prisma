model PrismaNomination {
	id Int @id @default(autoincrement())

	response PrismaNominationResponse @default(PENDING)

	user PrismaUser @relation(fields: [refUser], references: [username])
	refUser String @map("ref_user")

	post PrismaPost @relation(fields: [refPost], references: [slug])
	refPost String @map("ref_post")

	@@map("nominations")
}

enum PrismaNominationResponse {
	ACCEPTED
	REJECTED
	PENDING

	@@map("nomination_responses")
}

model PrismaUser {
	username String @id

	nominations PrismaNomination[]

	@@map("users")
}

model PrismaPost {
	slug String @id

	nominations PrismaNomination[]

	@@map("posts")
}