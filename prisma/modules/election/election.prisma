model PrismaElection {
	id Int @id @default(autoincrement())

	creator PrismaUser @relation(fields: [refCreator], references: [username])
	refCreator String @map("ref_creater")

	createdAt DateTime @default(now()) @map("created_at")
	openedAt DateTime? @map("opened_at")
	closedAt DateTime? @map("closed_at")

	open Boolean @default(false)
	nominationsHidden Boolean @default(false) @map("nominations_hidden")

	@@map("elections")
}

model PrismaUser {
	username String @id

	elections PrismaElection[]

	@@map("users")
}